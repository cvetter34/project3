<div class="row">
  <%= form_for @user, url: user_url(@user.id), method: :patch, html: { id: "useredit-form" } do |f| %>
    <fieldset>
      <div class="large-12 columns">
        <%= f.label :name, class: "sr-only" %>
        <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
      </div>
      <div class="large-12 columns">
        <%= f.label :description, class: "sr-only" %>
        <%= f.text_field :description, class: "form-control", placeholder: "Description" %>
      </div>
      <div class="large-4 columns">
        <%= f.label :facebook, class: "sr-only" %>
        <%= f.text_field :facebook, class: "form-control", placeholder: "Facebook" %>
      </div>
      <div class="large-4 columns">
        <%= f.label :avatar, class: "sr-only" %>
        <%= f.file_field :avatar, class: "sr-only" %>
        <%= f.hidden_field :avatar_cache %>
      </div>
      <div class="large-4 columns">
        <%= f.label :mobile_number, class: "sr-only" %>
        <%= f.text_field :mobile_number, class: "form-control", placeholder: "Mobile_number" %>
      <div class="large-12 columns">
        <%= f.submit "Edit", class: "btn" %>
      </div>

    </fieldset>
  <% end %>

</div>

<%= link_to 'Back', users_url %>